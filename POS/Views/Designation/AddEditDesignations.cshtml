@model POS.Models.DesignationModel
@{
    ViewBag.Title = "AddEditDesignations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="content container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("AddEditDesignationSave", "Designation", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h3 class="page-title">ADD/Edit Designation</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.designationId)
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            Designation Name
                            @Html.TextBoxFor(model => model.title, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                <div class="row">
                    <div class="row">
                        <div class="col-sm-12 text-center m-t-20">
                            <a href="@Url.Action("ManageDesignations", "Designation")" class="btn btn-primary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">Save &amp; update</button>
                        </div>
                    </div>
                </div>

            
        </div>
            }
    </div>
</div>
                   </div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}


