@model POS.Models.DesignationModel
@{
    ViewBag.Title = "AddEdit Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "";
        
}


<div class="container">
    <div id="basic-form" class="section">
        <div class="row">

            <div class="col s12 m12 l6">

                <div class="card-panel">
                    <h4 class="header2">Add Designation</h4>
                    <div class="row">
                        <!-- Modal -->
                        @using (Html.BeginForm("AddEditDesignationSave", "Designation", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="row">
                                <div class="input-field col l6 m6 s12">

                                    @Html.EditorFor(model => model.title)
                                    <label>
                                        Designation Name
                                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "red-text" })
                                    </label>
                                </div>
                            
                            </div>



                            <div class="row">
                                <div class="col s12 formButton">
                                    <a href="@Url.Action("ManageDesignations", "Designations")" class="waves-effect waves-light btn red right">
                                        Cancel<i class="mdi-content-send right"></i>
                                    </a>
                                    <input type="submit" value="Save" class="waves-effect waves-light btn green right" />

                                </div>
                            </div>

                            @Html.Hidden("hdndesignationId", Model.designationId)
                        }




                    </div>
                </div>
            </div>
        </div>
    </div>
</div>