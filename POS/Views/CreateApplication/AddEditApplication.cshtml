@model POS.Models.CreateApplicationModel
@{
    ViewBag.Title = "AddEdit CreateApplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="content container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("AddEditApplicationSave", "CreateApplication", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h3 class="page-title">ADD/Edit EmployeeRole</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.menuID)
                 @Html.HiddenFor(x => x.menuParentID)
    <div class="row">

        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(x => x.menuName)
                @Html.TextBoxFor(x => x.menuName, new { @class = "form-control" })
            </div>
        </div>
    </div>

        <div class="row">

        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(x => x.controllerName)
                @Html.TextBoxFor(x => x.controllerName, new { @class = "form-control" })
            </div>
        </div>
    </div>     
                
                
        <div class="row">

        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(x => x.actionName)
                @Html.TextBoxFor(x => x.actionName, new { @class = "form-control" })
            </div>
        </div>
    </div>     


    

                <div class="row">
                    <div class="row">
                        <div class="col-sm-12 text-center m-t-20">
                            <a href="@Url.Action("ManageApplication", "CreateApplication")" class="btn btn-primary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">Save &amp; update</button>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
                   </div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}


